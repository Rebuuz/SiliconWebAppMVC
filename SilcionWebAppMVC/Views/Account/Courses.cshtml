@using Infrastructure.Entities;
@model IEnumerable<CoursesEntity>;

<section id="search">
    <div class="container">
        <div class="breadCrumbs">
            <i class="fa-light fa-house"></i>
            <a href="home.html">Home</a>
            <i class="fa-regular fa-chevrons-right"></i>
            <a href="#" class="current">Courses</a>
        </div>
        <div class="headingSearch">
            <h1>Courses</h1>
            <div class="searchAndDropdown">
                <div class="categoryDropdown">
                    <select class="categoryOptions">
                        <option value="allCategories" selected>All Categories</option>
                        <option value="category1">Category 1</option>
                        <option value="category2">Category 2</option>
                        <option value="category3">Category 3</option>
                    </select>
                    <i class="fa-solid fa-angle-down"></i>
                </div>
                <div class="search-box">
                    <input type="text" placeholder="Search courses">
                    <i class="fa-regular fa-magnifying-glass"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="courses">
    <div class="container">
        <div class="courses-container">
                @foreach (var course in Model)
                {
                    <div class="box">
                        <a class="course-link" asp-action="Details" asp-controller="Courses" asp-route-id="@course.Id">
                        
                                    @if (course.IsBestSeller)
                                    {
                                        <div class="bestseller">Best Seller</div>
                                    }
                                    <button class="bookmark"><i class="fa-regular fa-bookmark"></i></button>
                        

                            <img src="~/images/courses/@course.CourseImage" alt="Course image">
                            <div class="content">
                                <h5>@course.Title</h5>
                                <p>@course.Author</p>
                                <div class="prices">
                                    @if (!string.IsNullOrEmpty(course.DiscountPrice))
                                    {
                                        <div class="discountprice">@course.DiscountPrice</div>
                                        <div class="originalprice">@course.Price</div>
                                    }
                                    <div class="price">@course.Price</div>
                                </div>
                            
                                <div class="likes-info">
                                    <i class="fa-light fa-clock"></i><p>@course.Hours hours</p>
                                    <i class="fa-light fa-thumbs-up"></i><p>@course.LikesInProcent% (@course.LikesInNumber K)</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }  
        </div>

        <div class="carousel">
            <div class="carousel-items">
                <i class="fa-solid fa-chevron-left"></i>
                <p>1</p>
                <p>2</p>
                <p class="active">3</p>
                <p>4</p>
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </div>
    </div>
</section>

<section id="work-with-us">
    <div class="container">
        <div class="content">
            <h5>Ready to get started?</h5>
            <h1>Take Your <span>Skills</span> to the Next Level</h1>
            <a href="#" class="btn-theme-s">Work with us</a>
        </div>
        <img src="images/image-workwithus.svg" alt="">
    </div>
</section>
