@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
}


<section id="signup">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignUp" novalidate class="row g-3">
            <h1>Create Account</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here.</a></p>
                <div class="col-md-6" id="input-group-1">
                    <label asp-for="FirstName" class="form-label">Firstname</label>
                    <input asp-for="FirstName" type="text" class="form-control" required>
                    <span asp-validation-for="FirstName"></span>
                </div>
                <div class="col-md-6" id="input-group-2">
                    <label asp-for="LastName" class="form-label">Lastname</label>
                    <input asp-for="LastName" type="text" class="form-control" required>
                    <span asp-validation-for="LastName"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" required>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="col-12">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" required>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col-12">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" required>
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="TermsAndConditions" class="form-check-input" type="checkbox" id="gridCheck" required>
                        <label asp-for="TermsAndConditions" class="form-check-label" for="gridCheck">
                            I agree to the <a asp-controller="About" asp-action="Terms">Terms</a> & <a asp-controller="About" asp-action="Conditions">Conditions.</a>
                        </label>
                    </div>
                    <div class="validation-msg">
                        <span asp-validation-for="TermsAndConditions"></span>
                    </div>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn-theme-s">Sign Up</button>
                </div>
        </form>
    </div>
</section>

@await Html.PartialAsync("~/Views/Shared/_ValidationScriptPartial.cshtml")